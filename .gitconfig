[core]
  editor = vim
  excludesfile = ~/.gitignore_global

[push]
  default = simple

[user]
  email = blevinstein@gmail.com
  name = Brian Levinstein

# kdiff3 for merges
[mergetool "kdiff3"]
  path = /usr/bin/kdiff3
  trustExitCode = false
[mergetool]
  keepBackup = false
[merge]
  tool = kdiff3
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
